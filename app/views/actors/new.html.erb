<%= form_for @actors do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :bio %><br>
    <%= f.text_field :bio %>
  </div>
  <div>
    <%= f.label :birth_date %><br>
    <%= f.date_field :birth_date %>
  </div>
  <div>
    <%= f.label :birth_place %><br>
    <%= f.text_area :birth_place %>
  </div>
  <div>
    <%= f.label :alive %><br>
    <%= f.radio_button :alive, "true" %> Sí
    <%= f.radio_button :alive, "false" %> No
  </div>
  <div>
    <%= f.label :death_date %><br>
    <%= f.date_field :death_date %>
  </div>
   <div>
    <%= f.label :death_place %><br>
    <%= f.text_field :death_place %>
  </div>
​
  <div>
    <%= f.submit %>
  </div>
<% end %>
